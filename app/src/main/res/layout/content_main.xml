<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.varunbehl.myappportfolio.MainActivity"
    tools:showIn="@layout/activity_main">

    <TextView
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:text="My Nanodegree Apps!"
        android:textSize="20dp"
        android:textAlignment="center"
        android:layout_gravity="center"
        />


    <Button
        android:id="@+id/spotify"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="5dp"
        android:background="#F08C35"
        android:padding="10dp"
        android:text="SPOTIFY STREAMER"
        android:textSize="20dp" />

    <Button
        android:id="@+id/scores"
        android:layout_width="250dp"
        android:layout_height="wrap_content"

        android:layout_gravity="center"
        android:layout_margin="5dp"
        android:background="#F08C35"
        android:padding="10dp"
        android:text="SCORES APP"
        android:textSize="20dp" />

    <Button
        android:id="@+id/library"
        android:layout_width="250dp"
        android:layout_height="wrap_content"

        android:layout_gravity="center"
        android:layout_margin="5dp"
        android:background="#F08C35"
        android:padding="10dp"
        android:text="LIBRARY APP"
        android:textSize="20dp" />

    <Button
        android:id="@+id/bigger"
        android:layout_width="250dp"
        android:layout_height="wrap_content"

        android:layout_gravity="center"
        android:layout_margin="5dp"
        android:background="#F08C35"
        android:padding="10dp"
        android:text="BUILD IT BIGGER"
        android:textSize="20dp" />

    <Button
        android:id="@+id/reader"
        android:layout_width="250dp"
        android:layout_height="wrap_content"

        android:layout_gravity="center"
        android:layout_margin="5dp"
        android:background="#F08C35"
        android:padding="10dp"
        android:text="XYZ READER"
        android:textSize="20dp" />

    <Button
        android:id="@+id/capstone"
        android:layout_width="250dp"
        android:layout_height="wrap_content"

        android:layout_gravity="center"
        android:layout_margin="5dp"
        android:background="#C51162"
        android:padding="10dp"
        android:text="CAPSTONE:MY OWN APP"
        android:textSize="20dp" />


</LinearLayout>
